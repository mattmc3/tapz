#!/usr/bin/env -S awk -f

# https://testanything.org
BEGIN {
    BLACK="\033[0;30m"
    RED="\033[0;31m"
    GREEN="\033[0;32m"
    YELLOW="\033[0;33m"
    BLUE="\033[0;34m"
    MAGENTA="\033[0;35m"
    CYAN="\033[0;36m"
    WHITE="\033[0;37m"
    BRBLACK="\033[1;90m"
    BRRED="\033[1;91m"
    BRGREEN="\033[1;92m"
    NORMAL="\033[0;0m"
}
/^ok /        { print GREEN $0 NORMAL; next }
/^not ok /    { print RED $0 NORMAL; next }
/^Bail out! / { print MAGENTA $0 NORMAL; next }
/^\# ===/     { print CYAN $0 NORMAL; next }
/^\# ok$/     { print BRGREEN $0 NORMAL; next }
/^\# pass /   { print BRGREEN $0 NORMAL; next }
/^\# fail /   { print BRRED $0 NORMAL; next }
/^\#/         { print BRBLACK $0 NORMAL; next }
              { print $0 }
